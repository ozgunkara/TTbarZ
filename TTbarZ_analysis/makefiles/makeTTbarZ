CXX=g++
RM=rm -f
CPPFLAGS=-std=c++0x -g $(shell root-config --cflags) -Wwrite-strings
LDFLAGS=-g $(shell root-config --ldflags)
LDLIBS=$(shell root-config --libs) -lTMVA
CFLAGS = `root-config --cflags --libs`

EXECUTABLE = main

SOURCES = source/BTagCalibration.cc source/CMS_lumi.C source/PostFitScaler.cc source/analysisTools.cc source/eventSelection.cc source/eventWeight.cc source/fortest.C source/runCode.cc source/stringTools.cc source/systemTools.cc source/treeReader.cc
OBJS=$(subst .cc,.o,$(SOURCES))

all: main

main: $(OBJS)
	$(CXX) $(LDFLAGS) -o $(EXECUTABLE) $(OBJS) $(LDLIBS) 

%.o: %.c 
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $<

.PHONY: clean

clean:
	$(RM) src/*.o *.so *.d
